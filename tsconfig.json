{
  "compilerOptions": {
    "rootDir": ".",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es5"],
    "types": ["mocha"],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
